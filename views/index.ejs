<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>The Simps Quiz</title>

  <!--External CSS-->
  <link href="https://fonts.cdnfonts.com/css/homer-simpson-revised" rel="stylesheet">


  <!--Bootstrap CSS-->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">


  <!--App CSS-->
  <link rel="stylesheet" href="/styles/_nav.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/homepage.css" type="text/css" />

</head>

<body>
  <%- include('partials/_navbar') %>


    <!--Page specific Content-->
    <main id="content-container">
      <h1>Test your Simpsons Knowledge!</h1>

      <div class="table">
        <div class="quiz-row" id="header-row">
          <span>
            <div class="cell">TITLE</div>
            <div class="cell">CREATOR</div>
            <div class="cell" id="description-cell">DESCRIPTION</div>
          </span>
          <span class="cell link">LINK</span>
        </div>


        <% for (let key in quizzes) { %>
          <a href="/" class="quiz-row">
            <span>
              <div class="cell">
                <%= quizzes[key].title %>
              </div>
              <div class="cell">
                <%= quizzes[key].fullname %>
              </div>
              <div class="cell" id="description-cell">
                <%= quizzes[key].description %>
              </div>
            </span>
            <div class="cell">
              <span href="/quiz/<%= quizzes[key].id %>">
                <button class="btn btn-primary">Share Link!</button>
              </span>
            </div>
          </a>
          <% } %>
      </div>
    </main>


    <!--Bootstrap JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"></script>
</body>

<footer>
  <img id="footer-pic" src="https://i.imgur.com/eydJHwc.png" alt="footer logo" style="width:100%; height: 120px">
</footer>

</html>

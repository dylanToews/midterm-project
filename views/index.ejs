<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>The Simps Quiz</title>

    <!--App CSS-->
    <link rel="stylesheet" href="/styles/nav.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />


    <!--Bootstrap CSS-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">


  </head>
  <body>
    <%- include('partials/_header') %>


<!--Page specific Content-->
    <h1>Test your Simpsons Knowledge!</h1>
    <div class="quiz-table-container">
      <table class="table">
        <thead>
          <tr class="table-row" id="table-header">
            <th scope="col">Title</th>
            <th scope="col">Creator</th>
            <th scope="col">Description</th>
            <th scope="col">Link</th>
          </tr>
        </thead>
        <tbody>
          <% for (let key in quizzes) { %>
          <tr class="table-row">
            <th scope="row"><%= quizzes[key].title %></th>
            <td><%= quizzes[key].name %></td>
            <td><%= quizzes[key].description %></td>
            <td>
            <a href="/quiz/<%= quizzes[key].id %>">
              <button class="btn btn-primary">Take Quiz!</button>
            </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <!--Bootstrap JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </body>
</html>
